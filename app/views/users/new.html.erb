<%= provide :title, "Sign Up" %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Sign Up</h1>
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :first_name, 'First Name' %>
      <%= f.text_field :first_name, class: "form-control", required: true, placeholder: "Joe" %>

      <%= f.label :last_name, 'Last Name'%>
      <%= f.text_field :last_name, class: "form-control", required: true, placeholder: "Smith" %>

      <%= f.label :email, 'Email' %>
      <%= f.email_field :email, class: "form-control", required: true, placeholder: "test@example.com" %>

      <%= f.label :password, 'Password' %>
      <%= f.password_field :password, class: "form-control", required: true %>

      <%= f.label :password_confirmation, 'Password Again' %>
      <%= f.password_field :password_confirmation, class: "form-control", required: true %>

      <%= f.submit "Register", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>