<div class="row row-full-height">
	<div class="col-md-4 col-md-offset-2">
		<%= image_tag "kick_push.png", size: "200x200", id: "login_icon", class: "center" %>
	</div>
	<div class="col-md-4">
		<h1>Login</h1>
		<%= form_tag "/static_pages/home", method: "GET" do %>
			<%= label_tag :email, 'Email'%>
			<%= text_field_tag :email, '', class: "form-control", required: true, placeholder: "test@example.com" %>
			<%= label_tag :password, 'Password' %>
			<%= password_field_tag :password, '', class: "form-control", required: true %>
			<%= submit_tag "Login", class: "btn btn-primary" %>
		<% end %>
		<p></p>
		<p>Don't have an account? <%= link_to 'Register', '/static_pages/register/' %></p>
	</div>
</div>